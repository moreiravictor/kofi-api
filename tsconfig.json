{
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "es2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@tests-int/*": ["tests-int/*"],
      "@tests-e2e/*": ["tests-e2e/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "tests-int/**/*.ts",
    "tests-e2e/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
